<li class='{{if @todo.isCompleted 'completed'}}'>
  <div class='view'>
    <input
      aria-label='Toggle the completion of this task'
      type='checkbox'
      class='toggle'
      checked={{@todo.isCompleted}}
      {{on 'change' (fn this.todos.toggleCompletion @todo)}}
    />
    <label>{{@todo.text}}</label>
    <button type='button' class='destroy' title='Remove task'></button>
  </div>

  <input autofocus class='edit' value='Todo Text' />
</li>