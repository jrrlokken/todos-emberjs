<footer class='footer'>
  <span class='todo-count'>
    <strong>{{this.todos.incomplete.length}}</strong>
    {{if this.todos.todoCountIsOne 'task' 'tasks'}}
    left
  </span>

  <ul class='filters'>
    <li>
      <LinkTo @route='index'>All</LinkTo>
      <LinkTo @route='active'>Active</LinkTo>
      <LinkTo @route='completed'>Completed</LinkTo>
    </li>
  </ul>

  <button
    class='clear-completed'
    type='button'
    {{on 'click' this.todos.clearCompleted}}
  >
    Clear Completed
  </button>
</footer>